{% extends 'base.html.twig' %}

{% block title %}Fixtures{% endblock %}

{% block body %}

    <style>
        h1, h3 {
            text-align: center;
        }
        .table {
            border-collapse: collapse;
            width: 90vw;
            border: solid 1px rgb(200, 200, 200);
            margin: 0 auto 100px;
        }
        .table th, .table td {
            padding: 15px;
            text-align: center;
            width: 25%;
        }
        .table thead {
            background-color: rgb(0, 212, 177);
            color: white;
        }

        .table tr:nth-child(2n) {
            background-color: rgb(240, 240, 240);
        }
        form > div {
            max-width: 1000px;
            margin: 50px auto;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 5px;
        }
        form > div div {
            flex: none;
        }
        input {
            height: 40px;
            display: block;
        }
        button {
            display: block;
            margin: -20px auto 20px;
            height: 40px;
            background-color: white;
            padding: 10px 15px;
            border: solid 1px black;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>

    <h1><a href={{ path('fixtures_index') }}>Fixtures</a></h1>


    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit">Valider</button>
    {{ form_end(form) }}


    {% if searchMatching %}
        <h3>Matching Search</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Searcher</th>
                    <th>Search</th>
                    <th>Message</th>
                <tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ searchMatching.searcher.firstName }} {{ searchMatching.searcher.lastName }} - ({{ searchMatching.searcher.birthYear }} - {{ searchMatching.searcher.email }} - {{ searchMatching.searcher.phone }})</td>
                    <td>{{ searchMatching.firstName }} {{ searchMatching.lastName }} ({{ searchMatching.age }} ans environ) | {{ searchMatching.cityFirstTime }} -> {{ searchMatching.cityLastTime}}</td>
                    <td>{{ searchMatching.message ?? '' }}</td>
                </tr>
            </tbody>
        </table>
    {% endif %}
    

    <table class="table">
        <h3>Searches can match</h3>
        <thead>
            <tr>
                <th>Searcher</th>
                <th>Search</th>
                <th>Message</th>
            <tr>
        </thead>
        <tbody>
            {% for search in searches %}
                <tr>
                    <td>{{ search.searcher.firstName }} {{ search.searcher.lastName }} - ({{ search.searcher.birthYear }} - {{ search.searcher.email }} - {{ search.searcher.phone }})</td>
                    <td>{{ search.firstName }} {{ search.lastName }} ({{ search.age }} ans environ) | {{ search.cityFirstTime }} -> {{ search.cityLastTime}}</td>
                    <td>{{ search.message ?? '' }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table> 
{% endblock %}
